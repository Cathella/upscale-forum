<%= form_for @forum_thread do |form| %>
  <div class="form-group mb-3">
    <%= form.text_field :subject, placeholder: "Subject", class: "form-control" %>
  </div>

  <%= form.fields_for :forum_posts do |post| %>
    <div class="form-group mb-4">
      <%= post.text_area :body, placeholder: "Add a comment", rows: 10, class: "form-control" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.submit "Create Thread", class: "btn btn-primary" %>
  </div>
<% end %>