<%= form_for [@forum_thread, @forum_post] do |form| %>
  <div class="form-group mb-4">
    <%= form.text_area :body, placeholder: "Add a comment", rows: 10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Add Comment", class: "btn btn-primary" %>
  </div>
<% end %>